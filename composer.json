{
    "name": "e0ipso/schema-forms",
    "description": "Creates form definitions from JSON Schema property definitions and display configuration.",
    "license": "GPL-2.0-or-later",
    "type": "library",
    "authors": [
        {
            "name": "Mateu AguilÃ³ Bosch",
            "email": "mateu@mateuaguilo.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "e0ipso/shaper": "^1.2",
        "justinrainbow/json-schema": "^5.2 || ^6.3",
        "symfony/polyfill-php81": "^1.26"
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "drupal/core-dev": "^11",
        "drupal/core-recommended": "^11",
        "enlightn/security-checker": "^2.0",
        "ergebnis/composer-normalize": "^2.47",
        "nikic/php-parser": "^5.6",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpro/grumphp-shim": "^2.14",
        "phpunit/phpunit": "^10",
        "povils/phpmnd": "^3.6",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SchemaForms\\": "src",
            "SchemaForms\\Tests\\": "tests/src"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true,
            "phpro/grumphp-shim": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": true
        }
    },
    "scripts": {
        "test": "php vendor/bin/grumphp.phar run"
    }
}
